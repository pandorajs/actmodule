<div class="lottery-pop" id="comment_pop" style="z-index:9999; top:0; left:0; position:fixed;">
	<span class="lottery-pop-close"></span>
	<h4 class="lottery-pop-tit">填写评论后参与抽奖</h4>
	<div class="lottery-pcon">
		{{#if commentTip}}
		<h4 class="lottery-fb">{{commentTip}}:</h4>
		{{/if}}
		<div class="lottery-form-textarea"><textarea id="comment_text" name="textarea" class="" placeholder=""></textarea></div>
		<div class="lottery-btn-box  lottery-tr"><button type="button" class="lottery-btn-submit" id="submit_comment">提交</button></div>
	</div>
</div>

<div class="lottery-mask" style="position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,.5); z-index:999;"></div>