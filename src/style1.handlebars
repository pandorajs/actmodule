<div class="lottery lottery1">
	{{#if showImg}}
	<div class="lottery-pic">
		<img src="{{activityImage}}!a-3-240x.jpg" width="180" height="135" alt="" />
	</div>
	{{/if}}
	<div class="lottery-text">
		<h4 class="lottery-tit">{{name}}</h4>
		<p class="lottery-p">活动时间：{{lotteryBeginTimeFormatted}} 至 {{lotteryEndTimeFormatted}}</p>
		<p class="lottery-p">活动规则：{{description}}</p>
	</div>
	<div class="lottery-state">
		<a href="javascript:;" class="lottery-btn {{status.className}}">{{status.text}}</a>
		<p class="lottery-state-tt">
			{{{status.html}}}
		</p>
	</div>
</div>