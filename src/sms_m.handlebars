<div class="lottery-pop" id="sms_pop" style="z-index:9999; top:0; left:0; position:fixed;">
	<section class="lottery-pop-in">
		<header class="lottery-pop-hd"><h4 class="lottery-tit">请完成验证码</h4><a href="#" class="lottery-pop-close"><i class="lottery-ico-close"></i></a></header>
		<div class="lottery-pop-bd">
			<div class="lottery-form-item-ex1">
				<input id="mobile_input" maxlength="11" class="lottery-form-input" type="text" value="" placeholder="输入手机号">
				<a href="javascript:;" class="lottery-btn-sendcode" id="send_sms">
					<span class="lottery-pop-btn-send send">发送</span>
					<span class="lottery-pop-btn-send resend">重新发送<span class="lottery-snum">(<span id="sms_time_left">120</span>)</span></span>
				</a>
			</div>
			<input class="lottery-form-input" maxlength="4" id="sms_input" type="text" value="" placeholder="输入验证码">
		</div>
		<button type="button" class="lottery-pop-btn-submit" id="submit_sms">提交</button>	
	</section>
</div>

<div class="lottery-mask" style="position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,.5); z-index:999;"></div>
